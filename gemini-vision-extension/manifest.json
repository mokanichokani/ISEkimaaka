{
  "manifest_version": 3,
  "name": "Gemini Vision Helper",
  "version": "0.2.0",
  "description": "Captures the current window and sends it to Gemini for analysis.",
  "permissions": [
    "activeTab",  // To capture the visible tab
    "storage",    // To store the API key
    "scripting"   // Needed for executeScript if we were injecting content scripts, but activeTab is enough for captureVisibleTab
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/" // To call the Gemini API
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}